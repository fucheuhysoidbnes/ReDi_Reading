    <!-- ThÃ´ng bÃ¡o khi khÃ´ng cÃ³ Ä‘Æ¡n -->
    <TextView
        android:id="@+id/tvEmptyOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Báº¡n chÆ°a cÃ³ Ä‘Æ¡n hÃ ng nÃ o."
        android:textAlignment="center"
