<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_item_bg">

    <!-- Checkbox (ẩn khi chưa bật chế độ xóa) -->
    <CheckBox
        android:id="@+id/chkSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:buttonTint="@color/brown"
        android:visibility="gone" />

    <!-- Ảnh sách -->
    <ImageView
        android:id="@+id/imgBookCart"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_toEndOf="@id/chkSelect"
        android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        android:contentDescription="Ảnh sách" />

    <!-- Thông tin sách -->
    <LinearLayout
        android:id="@+id/layoutInfo"
        android:orientation="vertical"
        android:layout_toEndOf="@id/imgBookCart"
        android:layout_marginStart="12dp"
        android:layout_toStartOf="@id/layoutQuantityControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvBookTitleCart"
            android:text="Tên sách"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvBookPriceCart"
            android:text="50.000đ"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Thanh tăng giảm số lượng (chuyển sang bên phải) -->
    <LinearLayout
        android:id="@+id/layoutQuantityControls"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnDecrease"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_minus"
            android:tint="@color/brown"
            android:contentDescription="Giảm số lượng"
            android:padding="4dp" />

        <TextView
            android:id="@+id/tvQuantity"
            android:text="1"
            android:textSize="16sp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <ImageView
            android:id="@+id/btnIncrease"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_plus"
            android:tint="@color/brown"
            android:contentDescription="Tăng số lượng"
            android:padding="4dp" />
    </LinearLayout>

</RelativeLayout>
