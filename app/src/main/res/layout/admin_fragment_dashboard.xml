<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ======= CARDS ======= -->
        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/cardTotalOrders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTotalOrders"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Tổng đơn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardPendingOrders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:background="@drawable/bg_card"
                android:backgroundTint="@color/status_pending"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPendingOrders"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Chờ xác nhận"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/cardDeliveringOrders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:background="@drawable/bg_card"
                android:backgroundTint="@color/status_delivering"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDeliveringOrders"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Đang giao"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardDeliveredOrders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:background="@drawable/bg_card"
                android:backgroundTint="@color/status_received"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDeliveredOrders"
                    android:text="0"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Đã giao"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/cardCancelledOrders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/bg_card"
                android:backgroundTint="@color/status_cancelled"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCancelledOrders"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Đã huỷ"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cardRevenue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:background="@drawable/bg_card"
                android:backgroundTint="@color/light_brown"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRevenue"
                    android:text="0đ"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Doanh thu hôm nay"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- FILTER -->
        <TextView
            android:layout_marginTop="16dp"
            android:text="Thống kê theo"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spFilterType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/dashboard_filter_type"
            android:layout_marginBottom="8dp" />

        <!-- RANGE -->
        <LinearLayout
            android:id="@+id/layoutDateRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvFromDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Từ ngày"
                android:padding="10dp"
                android:background="@drawable/bg_card"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvToDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đến ngày"
                android:padding="10dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_card"
                android:gravity="center" />
        </LinearLayout>

        <!-- PIE -->
        <TextView
            android:layout_marginTop="16dp"
            android:text="Tỉ lệ đơn hàng theo trạng thái"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartStatus"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <!-- BAR -->
        <TextView
            android:layout_marginTop="16dp"
            android:text="Biểu đồ doanh thu"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartRevenue"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <!-- LINE -->
        <TextView
            android:layout_marginTop="16dp"
            android:text="Biểu đồ đường doanh thu"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChartRevenue"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <!-- TOP PRODUCTS -->
        <TextView
            android:layout_marginTop="16dp"
            android:text="Top sản phẩm bán chạy"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTopProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
